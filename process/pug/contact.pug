          fieldset
            .form--grid
              //- Honeypot
              .form--field
                input#email(type='text', name='email')

              //- Name
              .form--field
                label(for='name') Name (required):
                  br
                input#name(type='text', name='name', placeholder='Enter your full name...', maxlength='30')

              //- E-mail
              .form--field
                label(for='emailaddr') E-mail (required):
                  br
                input#emailaddr(type='email', name='emailaddr', placeholder='Enter your e-mail...', maxlength='100')

              //- Phone Number
              .form--field
                label(for='phone') Phone Number:
                  br
                input#phone(type='text', name='phone', placeholder='Enter your phone number...', maxlength='15')

              //- Company/Organization
              .form--field
                label(for='company') Company/Organization:
                  br
                input#company(type='text', name='company', placeholder='Enter company or organization...', maxlength='30')

              //- Message
              .form--field
                label(for='message') Enter your message (required):
                  br
                textarea#message(name='message', maxlength='1000', minlength='10')

          .flex.flex--wrap
            input.btn.btn--md.btn--primary(type='submit', form='contactForm', value='SUBMIT')
            input.btn.btn--md.btn--accent(type='reset', value='CLEAR')
        
