{
  "name": "portfolio",
  "version": "2.0.0",
  "description": "## Description Individually, you will be developing a portfolio website. Unlike the prior projects which allowed for sites to link to false pages, **this website must be fully functional** (all links and content are real). The following content is required in the project:",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://dfpera@github.com/dfpera/Portfolio.git"
  },
  "author": "Daniele Perazzolo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dfpera/Portfolio/issues"
  },
  "homepage": "https://github.com/dfpera/Portfolio#readme",
  "browserslist": "last 2 versions, > 5%, ie 9-11",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "haml-watch": "git+https://github.com/mikeyhew/node-haml-watch.git",
    "html-minifier": "^3.5.21",
    "imagemin": "^6.0.0",
    "imagemin-cli": "^4.0.0",
    "imagemin-jpeg-recompress": "^5.1.0",
    "imagemin-optipng": "^6.0.0",
    "imagemin-svgo": "^7.0.0",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "pug-cli": "git+https://github.com/pugjs/pug-cli.git#0eb8d37",
    "uglify-js": "^3.4.9",
    "autoprefixer": "^8.2.0",
    "browser-sync": "^2.23.6",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.1",
    "gulp-sass": "^3.2.1",
    "postcss-calc": "^7.0.1",
    "postcss-css-variables": "git+https://github.com/CodyHouse/postcss-css-variables"
  },
  "scripts": {
    "test": "mkdirp builds/development/{assets,js,css,img,lib,fonts} && npm-run-all --parallel dev:*",
    "copy": "npm-run-all --parallel dev:copy-*",
    "dev:copy-img": "cp -rv process/img/* builds/development/img/",
    "dev:copy-lib": "cp -rv process/lib/* builds/development/lib/",
    "dev:copy-fonts": "cp -rv process/fonts/* builds/development/fonts/",
    "dev:copy-assets": "cp -rv process/assets/* builds/development/assets/",
    "dev:js": "babel process/js/**/*.js --watch --out-file builds/development/js/main.js --source-maps --presets=env",
    "dev:render": "pug --watch --pretty process/pug --out builds/development",
    "dev:serve": "gulp watch",
    "start": "mkdirp builds/production/{assets,js,css,img,lib,fonts} && npm-run-all prod:*",
    "prod:copy-img": "cp -rv builds/development/img/* builds/production/img/",
    "prod:copy-lib": "cp -rv builds/development/lib/* builds/production/lib/",
    "prod:copy-fonts": "cp -rv builds/development/fonts/* builds/production/fonts/",
    "prod:copy-assets": "cp -rv builds/development/assets/* builds/production/assets/",
    "prod:js": "uglify builds/development/js/main.js --compress --mangle --output builds/production/js/main.js",
    "prod:img": "imagemin builds/development/img/*.* --out-dir=builds/production/img --plugin=jpeg-recompress --plugin=svgo --plugin=optipng",
    "prod:html": "html-minifier --collapse-whitespace --file-ext html --input-dir builds/development/ --output-dir builds/production/",
    "prod:serve": "gulp watch"
  }
}
